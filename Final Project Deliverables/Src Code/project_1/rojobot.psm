				JUMP	nh_endcase					;		break;
													;
nh_caseORNE:	COMPARE	s0,		OR_NE			;	case (OR_NE):
				JUMP	NZ,		nh_caseORE			;
				LOAD	s4,		00					;		Dig[2:0] = 045
