next_loc:		LOAD		s0,		LocX				; Dig[3:2] gets X-coordinate
				LOAD		Dig2,	s0					; Digit 2 gets lower nibble
				AND		Dig2,	MSK_HEXDIGIT		;
				SR0		s0							; Digit3 gets upper nibble
				SR0		s0							; 
				SR0		s0							; 
				SR0		s0							;	
