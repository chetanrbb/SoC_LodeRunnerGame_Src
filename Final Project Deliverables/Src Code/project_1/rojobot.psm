; ==============================================================================
; === next_step() - Tells rojobot what to do next                            ===    
; === Registers affected: s0, s1                                             ===
; === This version reads the pushbuttons, calculates the new Motor Control   ===
; === register value and then writes MotCtl so Rojobot knows what to do      ===  
; ==============================================================================
next_step:		;CALL		DEB_rdbtns					; Read the pushbuttons. buttons returned in s0
				CALL 		Motion_ctrl					; Control the robot automatically according to the sensor readings
				; store the result in S0 register 
				CALL		btn2mot						; and calculate new MotCtl - returned in s1
				OUTPUT	s1,		PA_MOTCTL_IN			; tell Rojobot what to do
				RETURN																

; sensor readings are stored in the register s1 				
Motion_ctrl:	TEST 	s1, 18							; check for obstacles by reading the proximity sensor 
				JUMP 	Z,  black_line_stat				; zero flag will be set when there is no obstacle in front of the sensor
				; If there is obstacle in front of the sensor then stop the robot 
				LOAD 	s0, 0							; store 0 - stop motion of the robot 
				RETURN									; send the data of motion to the robot 

black_line_stat: TEST 	s1, 7							; check if the sensor is over black line or not 
				JUMP 	Z, move_back					; sensor is not over the black line so move back one step 
				; sensor is over the black line 
				FETCH	s4, TURNC						; check if the robot is on black line because it reversed and has to turn 
				TEST	s4, 1 							; if flag is set 1- start turning the robot else 0- move forward
				JUMP	C, turn_cont
				LOAD 	s0, A 							; move forward buttons combination is stored in the motion control  
				; store the orientation of the robot 
				; since orientation will only change when the robot is not over the black line
				; when the black line ends the robot will move backwards one step and start turning right
				; in this case the original orientation will not be affected and its reverse orientation will be used to 
				; the robot from going back the direction in which it came
				LOAD	s2, Botinf
				AND 	s2, MSKORIENT
				STORE	s2, ORG_ORNT					; store the current orientation 
				ADD		s2, ORNT_BASE_TABLE				; point to the location in scratch pad ram to read the reverse orientation 
				FETCH	s2, (s2)						; read the reverse orientation 
				STORE	s2, REV_ORNT					; store the value in scratch pad ram to preserve the value
				RETURN 									; robot was moving forward 

move_back: 		LOAD 	s3, Botinf
				AND 	s3, MSKORIENT
				FETCH	s2, ORG_ORNT					; the robot is no longer on the black line 
				; check if the robot is in turn operation or has to go reverse one distance
				TEST 	s2, s3							; check if the robot is in the same direction 
				JUMP 	NZ, turn_cont					; the robot is in middle of turning operation ; jump to turn_continue
				; robot has to move back 
				LOAD 	s0, 1							; flag to indicate that the robot will be on black line on next check and has to turn and not 
														; to move forward 
				STORE 	s0, TURNC						; set flag 
				LOAD 	s0, 5 							; set the motion to go reverse
				RETURN
				
turn_cont:		LOAD 	s0, 0							; clear the turn flag 
				STORE 	s0, TURNC
				LOAD 	s0, 9							; turn the robot 45 degrees to right fast
				RETURN
				; the robot will go forward till its on black line 
				; when black line is over the robot will move one step back 
				; again it is on black line but it will turn fast right 45 degrees 
				; it will now move forward and check for black line
				; if black line not found goto step 2 
				
